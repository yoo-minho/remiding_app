<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/card_view"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="8dp">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/back_image"
        android:background="@color/use_blue"
        android:layout_height="120dp"
        android:layout_weight="0"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/front_color"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="3"
            android:maxLines="3"
            android:maxLength="200"
            android:padding="20dp"
            android:text="홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동홍길동"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="6sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/item_checkBox"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="?android:attr/listChoiceIndicatorMultiple"
        android:button="@null"
        android:checked="false"
        android:gravity="center"
        android:visibility="visible" />

    <FrameLayout
        android:id="@+id/image_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_weight="5"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image_in_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_insert_photo_black_24dp" />v

</android.support.v7.widget.CardView>